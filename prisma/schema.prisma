generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  phone     String?
  password  String
  createdAt DateTime @default(now())
}

model Property {
  id          Int      @id @default(autoincrement())
  title       String
  price       Int
  rooms       Int
  bathrooms   Int
  images      String[]
  description String
  location    String
  amenities   String[]
  scrapedFrom String
  externalId  String
  hash        String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  url         String?
  keyFeatures Json?    // Stores the structured features data
}

model ScrapingLog {
  id        String   @id @default(uuid())
  website   String
  status    String   // success, error, partial
  message   String?  @db.Text
  startTime DateTime @default(now())
  endTime   DateTime?
  itemsScraped Int   @default(0)
  
  @@index([website, startTime])
}
